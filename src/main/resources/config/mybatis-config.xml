<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd" >
<configuration>
	
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
	<!-- 별칭 등록 -->
	<!-- 유의사항 : 미리 등록해두려면 해당 클래스가 당장 존재해야 됨 -->
	<typeAliases>
		<typeAlias type="com.ppicachu.ppic.member.model.vo.Member" alias="Member" />
		<typeAlias type="com.ppicachu.ppic.mail.model.vo.Mail" alias="Mail"/>
	</typeAliases>

	
	<!-- mapper 등록 -->
	<!-- 유의사항 : 미리 등록해두려면 해당 mapper파일이 현재 존재해야 됨 + namespace도 지정되어있어야 됨 -->
	<mappers>
		<mapper resource="/mappers/member-mapper.xml" />
		<mapper resource="/mappers/mail-mapper.xml" />
	</mappers>
	
	
</configuration>
